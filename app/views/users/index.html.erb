<html>
  <head>
    <title>Target: Photogram Final</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
  </head>

  <body>
  <h1>List of users
  </h1>
  <table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th></th>
    <th></th>
  </tr>
  <% @all_users.each do |user| %>
    <tr>
      <td>     
          <%= user.username %>
      </td>

      <td>
        <%= user.private? ? "Yes" : "No" %>
      </td>

      <td>
        <a href="/users/<%= user.username %>">
        Show details</a>
        </a>
      </td>
    </tr>
  <% end %>

  </body>
</html>
